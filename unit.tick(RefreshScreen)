--Under Unit, create a new tick filter with the value RefreshScreen.
--Fill the new tick filter with the following content

if Screen.getMouseState() == 0 then
	MouseDown = 0
end
if Screen.getMouseState() == 1 and MouseDown == 0 then
     MouseDown = 1
     MouseX = Screen.getMouseX()
	MouseY = Screen.getMouseY()
end
    
if pitchInput ~= 0 then
     PitchHelper = 0
end

if MouseDown == 1 then
    if PitchHelper == 1 and MouseX > 0.2 then 
        PitchHelper = 0
        elseif PitchHelper == 1 and MouseY < 0.2 then
        TargetAltitude = TargetAltitude + 500
        elseif PitchHelper == 1 and MouseY < 0.4 and MouseY > 0.2 then
        TargetAltitude = TargetAltitude + 100
        elseif PitchHelper == 1 and MouseY < 0.6 and MouseY > 0.4 then
        TargetAltitude = math.floor(core.getAltitude())
        elseif PitchHelper == 1 and MouseY < 0.8 and MouseY > 0.6 then
        TargetAltitude = TargetAltitude - 100
        elseif PitchHelper == 1 and MouseY < 1 and MouseY > 0.8 then
        TargetAltitude = TargetAltitude - 500
        else 
        PitchHelper = 1
        TargetAltitude = math.floor(core.getAltitude())
        end
        MouseDown = 2
end

if PitchHelper == 1 then
    html = 
[[
<div class="bootstrap" style="font-size:14vh;background-color:green;border:2vw outset green;position:absolute;width:80vw;right:0;">
<br>
Pitch Assist: On
<br><br>
Target Altitude:
<br>
]]..TargetAltitude..[[m
</div>
<div class="bootstrap" style="background-color:rgb(160,160,160);border:1vw outset gray;position:absolute;width:20vw;height:20vh;left:0;top:0;font-size:9vh;display:flex;justify-content:center;align-items:center;">+500</div>
<div class="bootstrap" style="background-color:rgb(140,140,140);border:1vw outset gray;position:absolute;width:20vw;height:20vh;left:0;top:20vh;font-size:9vh;display:flex;justify-content:center;align-items:center;">+100</div>    
<div class="bootstrap" style="background-color:rgb(120,120,120);border:1vw outset gray;position:absolute;width:20vw;height:20vh;left:0;top:40vh;font-size:9vh;display:flex;justify-content:center;align-items:center;">=</div>    
<div class="bootstrap" style="background-color:rgb(100,100,100);border:1vw outset gray;position:absolute;width:20vw;height:20vh;left:0;top:60vh;font-size:9vh;display:flex;justify-content:center;align-items:center;">-100</div>  
<div class="bootstrap" style="background-color:rgb(80,80,80);border:1vw outset gray;position:absolute;width:20vw;height:20vh;left:0;top:80vh;font-size:9vh;display:flex;justify-content:center;align-items:center;">-500</div>     
]]
else
html = 
[[
<div class="bootstrap" style="font-size:16vh;background-color:red;border:3vw outset red;">
Pitch Assist: Off
</div>
]]
end
    Screen.setHTML(html)
